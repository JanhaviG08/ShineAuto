<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Overview</title>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="style.css">
  <style>
    #totals {
  padding: 20px 0;
}

#totalsTable {
  width: 100%;
  border-collapse: collapse;
}

#totalsTable th, #totalsTable td {
  padding: 8px;
  text-align: center;
  border: 1px solid #ddd;
}

#totalsTable th {
  background-color: #f2f2f2;
}

#totalsTable td {
  background-color: #fff;
}

#totalsTable tbody tr:nth-child(even) td {
  background-color: #f9f9f9;
}

#totalsTable tbody tr:hover td {
  background-color: #e9e9e9;
}

  </style>
</head>
<body>
    <header class="top-bar">
        <div class="container">
          <div class="center-name">
            <h1>Shine<span> Auto</span></h1>
          </div>
          <div class="opening-hours">
            <h3>Opening Hours</h3>
            <p>Mon - Fri, 9:00 AM - 8:00 PM</p>
          </div>
          <div class="contact-info">
            <h3>Call Us</h3>
            <p>+0231 629941</p>
          </div>
        </div>
      </header>
  <header>
    <div class="container">
      <nav>
        <ul>
          <li><a href="/home"><i class="fas fa-home"></i> Home</a></li>
          <li class="nav-item">
            <a class="nav-link" href="/appointment">Schedule Appointment</a>
          </li>          
          <li><a href="/viewSales"><i class="fas fa-chart-bar"></i> View Sales</a></li>
          <li><a href="/viewPending"><i class="fas fa-list-alt"></i> Pending List</a></li>
          <li><a href="/salesOverview"><i class="fas fa-chart-line"></i> Sales Overview</a></li>
          <li><a class="btn" href="/cart"><i class="fas fa-shopping-cart"></i> Go to Cart</a></li>
          <li><a class="btn" href="/home">‚Üê Back</a></li>
        </ul>
      </nav>
    </div> 
  </header>

  <section id="salesOverview">
    <div class="container">
      <h2>Sales Overview</h2>
      <table id="salesTable">
        <thead>
          <tr>
            <th>Date & Time</th>
            <th>Vehicle Type</th>
            <th>Customer Name</th>
            <th>Phone Number</th>
            <th>Vehicle Details</th>
            <th>Number Plate</th>
            <th>Service Type</th>
            <th>Sub Service</th>
            <th>Amount To Be Paid</th>
            <th>Payment Status</th>
            <th>Payment Method</th>
          </tr>
        </thead>
        <tbody>
          <% salesData.forEach(item => { %>
            <tr>
              <td><%= item.submitDateTime.toLocaleString() %></td>
              <td><%= item.vehicleType %></td>
              <td><%= item.customerName %></td>
              <td><%= item.phoneNumber %></td>
              <td><%= item.vehicleDetails %></td>
              <td><%= item.numberPlate %></td>
              <td><%= item.serviceType.join(", ") %></td>
              <td><%= item.subService %></td>
              <td><%= item.amountToBePaid %>/-</td>
              <td><%= item.paymentStatus %></td>
              <td><%= item.paymentType %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </section>

  <section id="totals">
    <div class="container">
      <h2>Total Amount</h2>
      <table id="totalsTable">
        <thead>
          <tr>
            <th>Total Cash</th>
            <th>Total Online</th>
            <th>Total Combined</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= totalCash %>/-</td>
            <td><%= totalOnline %>/-</td>
            <td><%= totalCombined %>/-</td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
  <a href="#" class="back-to-top" id="backToTopBtn" title="Go to top"><img src="img/top.png" alt="Back-to-Top"></a>

  <footer>
    <div class="container">
      <p>&copy; 2025 Shine Auto</p>
    </div>
  </footer>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
  <script>
    $(document).ready(function() {
      $('#salesTable').DataTable();
    });
  </script>
</body>
</html>
